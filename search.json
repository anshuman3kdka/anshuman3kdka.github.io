---
layout: null
---
[
  {% assign all_docs = site.pages | concat: site.documents | uniq | where_exp: "item", "item.title" %}
  {% for item in all_docs %}
  {
    "title": {{ item.title | jsonify }},
    "category": {{ item.url | remove_first: '/' | split: '/' | first | capitalize | replace: 'Index.html', 'Page' | jsonify }},
    "url": {{ item.url | relative_url | jsonify }},
    "content": {{ item.content | strip_html | strip_newlines | truncatewords: 30 | jsonify }}
  }{% unless forloop.last %},{% endunless %}
  {% endfor %}
]
